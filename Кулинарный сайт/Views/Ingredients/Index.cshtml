@model IEnumerable<Кулинарный_сайт.Models.Ingredients>
 
@{
    ViewBag.Title = "ingredient";
}
 <h2>Ingredients</h2>

 <p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calorie_content)
            </th>
               <th>
                @Html.DisplayNameFor(model => model.Squirrels)
            </th>
               <th>
                @Html.DisplayNameFor(model => model.Fats)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Carbohydrates)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Glycemic_index)
            </th>
            <th>
                <div>
                    <a href="@Url.Action("Index", new { sortBy = "" })">Sort by Title (A-Z)</a> |
                    <a href="@Url.Action("Index", new { sortBy = "1" })">Sort by Title (Z-A)</a>
                </div>
            </th>
        </tr>
    </thead> 
     <tbody>
         @foreach (var item in Model)
        {
             <tr>
                 <td>
                    @Html.DisplayFor(modelItem => item. Name )
                 </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Calorie_content)
                 </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Squirrels)
                 </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Fats)
                 </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Carbohydrates)
                 </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Glycemic_index)
                 </td>
             <td>
                 @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                 @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                 @Html.ActionLink("Delete", "Delete", new { id = item.Id })
             </td>
         </tr>
     }
 </tbody>
</table> 
